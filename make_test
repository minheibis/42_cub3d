SRCS =    cub3d.c \
(中略)
        check_second_argv.c
OBJS    = $(SRCS:.c=.o)
UNAME    := $(shell uname)
ifeq ($(UNAME), Linux)
LIBS    = -lXext -lX11
else
LIBS    = libmlx.dylib -framework OpenGL -framework AppKit
endif
NAME    = cub3D
CC        = gcc -Wall -Wextra -Werror -g
RM        = rm -f
ifeq ($(UNAME), Linux)
$(NAME): $(OBJS)
    $(MAKE) -C ./libft
    $(MAKE) -C ./minilibx-linux
    cp ./minilibx-linux/libmlx_Linux.a .
    $(CC) $(OBJS) -L. -L.minilibx-linux -lmlx_Linux $(LIBS) -lm ./libft/libft.a -o $(NAME)
all: $(NAME)
clean:
    $(MAKE) clean -C ./libft
    $(MAKE) clean -C ./minilibx-linux
    $(RM) $(OBJS)
fclean: clean
    $(MAKE) fclean -C ./libft
    $(MAKE) clean -C ./minilibx_mms_20200219
    $(RM) $(NAME) libmlx_Linux.a cub3D.bmp
re: fclean all
.PHONY: all clean fclean re .c.o
else
$(NAME): $(OBJS)
    $(MAKE) -C ./libft
    $(MAKE) -C ./minilibx_mms_20200219
    cp ./minilibx_mms_20200219/libmlx.dylib ./
    $(CC) $(OBJS) $(LIBS) -lm ./libft/libft.a -o $(NAME)
all: $(NAME)
clean:
    $(MAKE) clean -C ./libft
    $(MAKE) clean -C ./minilibx_mms_20200219
    $(RM) $(OBJS)
fclean: clean
    $(MAKE) fclean -C ./libft
    $(MAKE) clean -C ./minilibx_mms_20200219
    $(RM) $(NAME) libmlx.dylib cub3D.bmp
re: fclean all
endif